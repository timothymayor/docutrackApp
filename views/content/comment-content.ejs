<!--complete logic for category view-->
<% if (title == 'Create Comment') { %>
    <div class="col-sm-8">    
        <div class="jumbotron">
            
        </div>
    </div>
<% } else if (title == 'Delete Comment') { %>
     
<% } else if (title == 'Update Comment') { %>
    <div class="col-sm-12">    
        <div class="jumbotron">
            <form action="/doc/comment/<%= comment.id %>/update" method="post">
              <label for="title">Comment Title:</label><br>
              <input type="text" name="title" value="<%= comment.title %>" required class="form-control">
              <br><br>
              <label for="description">Comment Body:</label><br>
              <input type="text" name="description" value="<%= comment.description %>" required class="form-control">
              <br><br>
              <button type="submit" class="btn btn-primary">Update Comment</button>
            </form>
        </div>
    </div>
<% } else if (title == 'Comment Details') { %>
    <div class="col-sm-12">    
        <div class="">
             <h5>Details of comment</h5>
             <p>Comment title : <%= comment.title %></p>
             <p>Comment Description : <%= comment.description %></p>
             <a href="/doc/comment/<%= comment.id %>/update" class="btn btn-primary">Edit  Comment</a> | <a href="/doc/comment/<%= comment.id %>/delete" class="btn btn-danger">Delete Comment</a>
        </div>
    </div>
<% } else if (title == 'Comment List') { %>
    <div class="col-sm-12 my-3">    
        <div class="">
        <ol>
        <% comments.forEach(function(comment) { %>
            <li>
                <h6><a href="/doc/comment/<%= comment.id %>"><%= comment.title %></a></h6>
                <p><%= comment.description %></p>
                 <a href="/doc/document/<%= comment.DocumentId %>" class="btn btn-primary">View parent document</a> | <a href="/doc/comment/<%= comment.id %>/update" class="btn btn-primary">Edit  Comment</a> | <a href="/doc/comment/<%= comment.id %>/delete" class="btn btn-danger">Delete Comment</a>
            </li>
            <br>
        <% }); %>
        </ol>
    </div>
    </div>
<% } else { %>

<% } %>
<!--COMMENT VIEW END HERE-->

