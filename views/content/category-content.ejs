 <% if (title == 'Category List'){ %>
    <div class="page-wrapper col-sm-12">
        <!-- ******Header****** -->
        
     <div class="doc-wrapper">
            <div class="container">
                <div id="doc-header" class="doc-header text-center">
                    <h1 class="doc-title"><span aria-hidden="true" class="icon icon_lifesaver"></span> Categories</h1>
                    <div class="meta"><i class="far fa-clock"></i> Last updated: February 20th, 2020</div>
                </div><!--//doc-header-->
                
                <div id="showcase" class="doc-body row">
                    <div class="doc-content col-md-9 col-12 order-1">
                      <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary my-3" data-toggle="modal" data-target="#createCategory">
                          Create a Category
                        </button>
                        
                        <!-- Modal -->
                        <div class="modal fade" id="createCategory" tabindex="-1" role="dialog" aria-labelledby="createCategoryLabel" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Create New Category</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                        <!--Create new document here-->
                                    <form action="/doc/category/create" method="POST">
                                      <label for="title">Title:</label>
                                      <input type="text" name="title" placeholder="Title of Category" class="form-control" required>
                                      <br><br>
                                      <label for="description">Description:</label>
                                      <textarea name="description" placeholder="Description of Category" class="form-control" required rows="4"></textarea>
                                      <br><br>
                                      <button type="submit" class="form-control btn btn-primary">Create Category</button>
                                    </form>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="content-inner">
                        <section id="routes" class="doc-section">
                          <h4 id="list">Categories List</h4>
                                <div class="section-block">
                                    <div class="row">
                                    <% categories.forEach(function (category){
                                    %>
                            
	                                      <div class="col-md-4 col-12 mb-3">
                                            <div class="theme-card">
                                                <a href="/doc/category/<%= category.id %>"><i  class="icon icon_lifesaver"></i></a>
                                                <div class="card-block">
                                                    <h4 class="card-title"><%= category.title %></h4>
                                                    <p class="card-text"><%= category.description %></p>
                                                </div><!--//card-block-->
                                                <a class="mask" href="/doc/category/<%= category.id %>"><i class="icon fa fa-search-plus"></i></a>
                                            </div><!--//theme-card-->
                                        </div>
                                        <% }); %>
                                    </div><!--//row-->
                                </div><!--//section-block-->
                            </section><!--//doc-section-->
                        
                                                        
                        </div><!--//content-inner-->
                    </div><!--//doc-content-->
                    <div class="doc-sidebar col-md-3 col-12 order-0 d-none d-md-flex">
                        <div id="doc-nav" class="doc-nav">
                            <nav id="doc-menu" class="nav doc-menu flex-column sticky">
                                <a class="nav-link scrollto" href="#list">Categories List</a>
                            </nav><!--//doc-menu-->
                        </div>
                    </div><!--//doc-sidebar-->
                </div><!--//doc-body-->              
            </div><!--//container-->
        </div><!--//doc-wrapper-->
        
    </div><!--//page-wrapper-->
    <% } else if (title == 'Category Detail'){ %>
      <div class="col-sm-12 my-5">    
        <div class="">
            <p>Title:  <%= category.title %></p>
            <p>Description:  <%= category.description %></p>
            <a href="/doc/category/<%= category.id %>/update">Edit Category</a> | <a href="/doc/category/<%= category.id %>/delete">Delete Category</a>
            <br>
            <h5 class="text-center my-3">Documents under this category:</h5>
            <section id="premium-themes" class="doc-section">
                <div class="section-block">
                    <div class="row">
                    <%
                        if (documents.length == 0) {
                    %>
                        <h6 class="text-center col">There are no documentations here. </h6>
                    <% }else {  documents.forEach(function (document){ %>
            
                        <div class="col-md-4 col-12 mb-3">
                            <div class="theme-card">
                                <a href="/doc/document/<%=document.id%>"><i class="icon icon_book"></i></a>
                                <div class="card-block">
                                    <h4 class="card-title"><%= document.subject %></h4>
                                    <p class="card-text"><%= document.description %></p>
                                </div><!--//card-block-->
                                <a class="mask" href="/doc/document/<%=document.id%>"><i class="icon fa fa-search-plus"></i></a>
                            </div><!--//theme-card-->
                        </div>
                        
                        <% });
                    } %>
                    </div><!--//row-->
                </div><!--//section-block-->
            </section><!--//doc-section-->
        </div>
      </div>
    <% } %>
    
        